<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <welcome-file-list>
        <welcome-file>Login.html</welcome-file>
    </welcome-file-list>
    <filter>
        <filter-name>编码</filter-name>
        <filter-class>MyFilter.EncodeFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>编码</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>登录接口</servlet-name>
        <servlet-class>MyServlet.ApiLogin</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>登录接口</servlet-name>
        <url-pattern>/api/ApiLogin/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>课程接口</servlet-name>
        <servlet-class>MyServlet.ApiCourse</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>课程接口</servlet-name>
        <url-pattern>/api/ApiCourse/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>欢迎页面</servlet-name>
        <servlet-class>MyServlet.Welcome</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>欢迎页面</servlet-name>
        <url-pattern>/Welcome</url-pattern>
    </servlet-mapping>
</web-app>