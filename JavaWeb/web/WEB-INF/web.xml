<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <welcome-file-list>
        <welcome-file>Login.html</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>登录</servlet-name>
        <servlet-class>Login.ApiLogin</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>登录</servlet-name>
        <url-pattern>/api/ApiLogin</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>登录页面</servlet-name>
        <servlet-class>Login.Login</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>登录页面</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>注册</servlet-name>
        <servlet-class>Login.Register</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>注册</servlet-name>
        <url-pattern>/api/ApiLogin/Register</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>验证码</servlet-name>
        <servlet-class>Login.Validate</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>验证码</servlet-name>
        <url-pattern>/api/ApiLogin/Validate</url-pattern>
    </servlet-mapping>
</web-app>