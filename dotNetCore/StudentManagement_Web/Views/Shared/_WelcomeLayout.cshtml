<!DOCTYPE html>

<html lang="zh">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>欢迎，@ViewData["Title"]好！</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/WelcomeView.css" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="~/js/CookieAbout.js"></script>
    <script type="text/javascript" src="~/js/AjaxAbout.js"></script>
    <script type="text/javascript" src="~/js/WelcomeFunction.js"></script>
    <script type="text/javascript" src="~/js/@ViewData["JsFunction"]"></script>

</head>

<body>
    <div class="container-fluid">
        <div class="divtrans row">
            <div class="col-8 col-md-8 col-sm-8">
                <div class="navbar-brand logobg">
                    <a href="../Welcome">学生信息管理系统</a>
                </div>
            </div>
            <div class="col-4 col-md-4 col-sm-4">
                <nav class="navbar navbar-expand-lg navbar-light">
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#option"
                            aria-controls="option" aria-expanded="true" aria-label="切换导航">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div id="option" class="navbar-collapse collapse">
                        <ul id='small_op' class="navbar-nav mr-auto">
                            <li class="nav-item">
                                <a class="nav-link" href="../User/UserInfomation">用户资料</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#" onclick="ChangeUserName()">修改用户名</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#" onclick=" ChangeUserPassword()">修改密码</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" id="reLogin" onclick="ReLogin()" href="#">重新登录</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" id="exitSystem" onclick="closePageForm()" href="#">退出系统</a>
                            </li>
                        </ul>
                        <ul id='big_op' class="navbar-nav mr-auto">
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="option_drop" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                </a>
                                <div class="dropdown-menu" aria-labelledby="option_drop">
                                    <a class="dropdown-item" href="#" onclick="ChangeUserName()">修改用户名</a>
                                    <a class="dropdown-item" href="#" onclick=" ChangeUserPassword()">修改密码</a>
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" id="reLogin" onclick="ReLogin()" href="#">重新登录</a>
                                </div>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="../User/UserInfomation">用户资料</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" id="exitSystem" onclick="closePageForm()" href="#">退出系统</a>
                            </li>
                        </ul>
                    </div>
                </nav>
            </div>
        </div>
    </div>
    <div>
        @RenderBody()
    </div>
</body>

</html>