@{
    Layout = "_UserLayout";
    ViewData["JsFunction"] = "TeacherFunction.js";
}

<script>

    window.onload = function () {
        var User = getJSONCookie('User');
        var Id = User.UserID;
        if (User.Role == 2) {
            dataTypeChoose = 3;
            onloadViewTeacher(teacher_index, dataTypeChoose, Id);
            GetPageNumTeacher(dataTypeChoose);
        }
    }
</script>
<div class="container">
    <div class="col-2">
        课程：
    </div>
    <div class="col-4">
        <select id="selectCourse">
        </select>
    </div>
    <div class="col-2">
        考试：
    </div>
    <div class="col-4">
        <select id="selectExam">
        </select>
    </div>
    <div>
        <table id="apply_table" style="margin:auto;text-align:center">
            <thead>
                <tr>
                    <td>考试ID</td>
                    <td>课程名称</td>
                    <td>考试名称</td>
                    <td>考试时间</td>
                    <td>考试时长</td>
                    <td>参加考试</td>
                </tr>
            </thead>
            <tbody id="apply_list">
            </tbody>
        </table>
    </div>
    <div style="text-align: center;">
        <div class="mr-auto">
            <button class="btn btn-info" onclick="LeftIndex()">&lt;</button>
            <label id="index">1</label>
            <label id="split">/</label>
            <label id="page">3</label>
            <button class="btn btn-info" onclick="RightIndex()">&gt;</button>
        </div>
    </div>
</div>