@{
    Layout = "_UserLayout";
    ViewData["JsFunction"] = "TeacherFunction.js";
}
<script>

    window.onload = function () {
        var User = getJSONCookie('User');
        var Id = User.UserID;
        if (User.Role == 2) {
            dataTypeChoose = 4;
            onloadViewTeacher(teacher_index, dataTypeChoose, Id);
            GetPageNumTeacher(dataTypeChoose);
        }
    }

</script>
<div>
    <table border="1" id="apply_table" style="margin:auto;text-align:center">
        <thead>
            <tr id="headGrade">
            </tr>
        </thead>
        <tbody id="apply_list">
        </tbody>
    </table>
</div>
<div style="text-align: center;">
    <div class="mr-auto">
        <button class="btn btn-info" onclick="LeftIndex()">&lt;</button>
        <label id="index">1</label>
        <label id="split">/</label>
        <label id="page">3</label>
        <button class="btn btn-info" onclick="RightIndex()">&gt;</button>
    </div>
</div>