@{
    Layout = "_UserLayout";
    ViewData["JsFunction"] = "TeacherFunction.js";
}

<script>

    window.onload = function () {
        var User = getJSONCookie('User');
        var Id = User.UserID;
        if (User.Role == 2) {
            dataTypeChoose = 2;
            onloadViewTeacher(teacher_index, dataTypeChoose, Id);
            GetPageNumTeacher(dataTypeChoose);
        }
    }

</script>
<div class="container">
    <div class="row">
        <div class="col-12">
            <table style="margin:auto;text-align:center">
                <thead>
                    <tr>
                        <td>考试课程：</td>
                        <td>考试时间：</td>
                        <td>考试时长：</td>
                        <td>考试名称：</td>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            <select id="selectCourse" class="custom-select">
                            </select>
                        </td>
                        <td>
                            <input class="form-control" id="datetimeInput" type="datetime-local" value="2019-12-01T08:00:00" />
                        </td>
                        <td>
                            <input class="form-control" id="durationInput" type="text">
                        </td>
                        <td>
                            <input class="form-control" id="nameInput" type="text">
                        </td>
                    </tr>
                    <tr>
                        <td colspan="4">
                            <button class="btn btn-block btn-danger" onclick="applyExam()">
                                申请考试
                            </button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="col-12 text-secondary text-center" onclick="">
            申请待通过考试
        </div>
        <div class="col-12">
            <table id="apply_table" style="margin:auto;text-align:center">
                <thead>
                    <tr>
                        <td>考试ID</td>
                        <td>课程名称</td>
                        <td>考试时间</td>
                        <td>考试名称</td>
                        <td>考试时长</td>
                    </tr>
                </thead>
                <tbody id="apply_list">
                </tbody>
            </table>
        </div>
        <div class="col-12 text-secondary text-center" onclick="">
            我的考试
        </div>
        <div class="col-12">
            <table id="exam_table" style="margin:auto;text-align:center">
                <thead>
                    <tr>
                        <td>课程名称</td>
                        <td>考试名称</td>
                        <td>考试时间</td>
                        <td>考试时长</td>
                        <td>修改考题</td>
                    </tr>
                </thead>
                <tbody id="exam_list">
                </tbody>
            </table>
        </div>
    </div>
</div>