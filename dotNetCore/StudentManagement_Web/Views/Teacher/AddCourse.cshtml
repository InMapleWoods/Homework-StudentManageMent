@{
    Layout = "_UserLayout";
    ViewData["JsFunction"] = "TeacherFunction.js";
}
<script>

    window.onload = function () {
        var User = getJSONCookie('User');
        var Id = User.UserID;
        if (User.Role == 2) {
            dataTypeChoose = 1;
            onloadViewTeacher(teacher_index, dataTypeChoose, Id);
            GetPageNumTeacher(dataTypeChoose);
        }
    }

</script>
<div>
    <table style="margin:auto;text-align:center">
        <tr>
            <td>课程名：</td>
            <td>
                <input id="CourseName" type="text" placeholder="课程名" />
            </td>
            <td>
                <button class="btn btn-success" onclick="AddCourse()">增加课程</button>
            </td>
        </tr>
    </table>
</div><div style="height: 70px;"></div>
<div>
    <table id="apply_table" style="margin:auto;text-align:center">
        <thead>
            <tr>
                <td>课程ID</td>
                <td>课程名称</td>
                <td>教师名称</td>
            </tr>
        </thead>
        <tbody id="apply_list">
        </tbody>
    </table>
</div>
<div style="text-align: center;">
    <div class="mr-auto">
        <button class="btn btn-info" onclick="LeftIndex()">&lt;</button>
        <label id="index">1</label>
        <label id="split">/</label>
        <label id="page">3</label>
        <button class="btn btn-info" onclick="RightIndex()">&gt;</button>
    </div>
</div>